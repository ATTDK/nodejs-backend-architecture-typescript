{
  "name": "nodejs-backend-architecture",
  "version": "1.0.2",
  "description": "The architecture for nodejs backend application. It is build on top of expressjs using typescript.",
  "main": "index.js",
  "scripts": {
    "go": "tsc && node dist",
    "start": "npm run build && npm run serve",
    "serve": "node -r dotenv/config build/crawl_ut.js",
    "serve_1": "node -r dotenv/config build/crawl_tq_1.js",
    "serve_2": "node -r dotenv/config build/crawl_tq_2.js",
    "serve_3": "node -r dotenv/config build/crawl_tq_3.js",
    "serve_4": "node -r dotenv/config build/crawl_dc.js",
    "serve_5": "node -r dotenv/config build/crawl_ut.js",
    "build": "npm run build-ts",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon -r dotenv/config build/crawl_ut.js",
    "crawl_1": "npm run build && npm run serve_1",
    "crawl_2": "npm run build && npm run serve_2",
    "crawl_3": "npm run build && npm run serve_3",
    "clean": "rimraf ./build",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "eslint": "eslint . --ext .js,.ts",
    "pm2": "pm2 start pm2.config.json",
    "pm2_server": "pm2 start pm2_server.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/afteracademy/nodejs-backend-architecture-typescript.git"
  },
  "author": "AfterAcademy",
  "license": "Apache-2.0",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cheerio": "*",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.1.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^5.13.2",
    "node-cron": "^2.0.3",
    "pm2": "^4.5.6",
    "puppeteer": "^9.1.1",
    "request": "^2.88.2",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0",
    "yarn": "^1.22.10"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.19.1",
    "@types/cheerio": "^0.22.30",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/hapi__joi": "^17.1.7",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/lodash": "^4.14.171",
    "@types/mongoose": "^5.10.5",
    "@types/morgan": "^1.9.3",
    "@types/node": "^14.17.5",
    "@types/request": "^2.48.6",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "colors": "^1.4.0",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.6.1",
    "nodemon": "^2.0.12",
    "prettier": "^2.1.2",
    "supertest": "^6.0.0",
    "ts-jest": "^26.4.3",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.0",
    "typescript": "^4.3.5"
  }
}
